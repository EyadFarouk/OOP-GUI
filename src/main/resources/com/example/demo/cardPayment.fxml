      <Button fx:id="selectOrRemove" layoutX="656.0" layoutY="378.0" mnemonicParsing="false" onAction="#Cardremoveorselect" text="select or remove card">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <TextField fx:id="addMoneyField" layoutX="657.0" layoutY="56.0" promptText="enter money available " />
      <Label fx:id="moneycheck" layoutX="695.0" layoutY="86.0" text="available money" />
   </children>
</AnchorPane>
