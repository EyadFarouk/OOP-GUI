<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.PaymentController">
   <children>
      <ImageView fx:id="pic3" fitHeight="425.0" fitWidth="837.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../imgs/food.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="214.0" layoutY="14.0" prefHeight="42.0" prefWidth="366.0" text="please enter your card info ">
         <font>
            <Font name="HP Simplified Hans Regular" size="20.0" />
         </font>
      </Label>
      <Button fx:id="goback4" layoutX="695.0" layoutY="329.0" mnemonicParsing="false" onAction="#switchTopayment" text="go back">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <TextField fx:id="cardnum" layoutX="36.0" layoutY="56.0" promptText="enter your card number" />
      <TextField fx:id="cvv" layoutX="237.0" layoutY="56.0" promptText="enter your card Cvv" />
      <TextField fx:id="expirationDate" layoutX="437.0" layoutY="56.0" promptText="enter exp date MM/YY" />
